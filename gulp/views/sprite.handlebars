// ## sprite
// sprite and this scss file are created by the gulp task 'sprite',
// generated sprite is a 2x display dimensions

// docs: https://www.npmjs.com/package/sprity
{{#each layouts}}
{{#each sprites}}

// ### {{../../indicator}}{{cssesc ../classname}}

%{{../../indicator}}{{cssesc ../classname}} {

    // hide any text inside the sprite container from sighted users
    @extend %accessibility-hidden-text;

    background-image: url('{{escimage url}}');
    background-repeat: no-repeat;
    background-size: rem-calc(({{baseWidth}} / 2 )) rem-calc(({{baseHeight}} / 2));
    display: block;
    overflow: hidden;

    // hide any elements inside the sprite container from sighted users
    > * {
        @extend %accessibility-hidden;
    }

}
{{/each}}
{{/each}}

{{#each layouts}}
    {{#each layout.items}}
// ### {{#if ../../opt.split}}{{cssesc ../../name}}-{{/if}}{{cssesc meta.name}}

%{{#if ../../opt.split}}{{cssesc ../../name}}-{{/if}}{{cssesc meta.name}} {

    @extend %{{cssesc ../classname}};

    background-position: rem-calc(-(({{baseDim x}} / 2) + 4)) rem-calc(-(({{baseDim y}} / 2) + 4));
    height: rem-calc((({{baseDim height}} - 20) / 2) + 2);
    width: rem-calc((({{baseDim width}} - 20) / 2) + 2);

}

    {{/each}}
{{/each}}
